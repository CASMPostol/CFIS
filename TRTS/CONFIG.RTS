            SUBTTL  Definition of configuration flags for the RTS 3.0

TRUE                    =       0FFFFH      ; to be able to use NOT
FALSE                   =       0

StackStatistic          EQU     FALSE

IFDEF M2Only
                M2RTS   EQU     TRUE
                MCRTS   EQU     FALSE
                CMRTS   EQU     FALSE
                ISTRTS  EQU     FALSE
ELSE
  IFDEF RTSmainM2
                M2RTS   EQU     FALSE
                MCRTS   EQU     TRUE
                CMRTS   EQU     FALSE
                ISTRTS  EQU     FALSE
  ELSE
    IFDEF RTSmainC
                M2RTS   EQU     FALSE
                MCRTS   EQU     FALSE
                CMRTS   EQU     TRUE
                ISTRTS  EQU     FALSE
    ELSE
      IFDEF TRTS
                M2RTS   EQU     TRUE
                MCRTS   EQU     FALSE
                CMRTS   EQU     FALSE
                ISTRTS  EQU     TRUE
        IFDEF IAPX186
                IsIAPX186 EQU     TRUE
        ELSE
                IsIAPX186 EQU     FALSE
        ENDIF
      ELSE
                M2RTS   EQU     FALSE
                MCRTS   EQU     FALSE
                CMRTS   EQU     FALSE
                ISTRTS  EQU     FALSE
                .ERR
      ENDIF
    ENDIF
  ENDIF
ENDIF

IF ISTRTS
  IFDEF ONPC
        RUN_ON_PC       EQU     TRUE
  ELSE
        RUN_ON_PC       EQU     FALSE
  ENDIF
ELSE
        RUN_ON_PC       EQU     TRUE
ENDIF
