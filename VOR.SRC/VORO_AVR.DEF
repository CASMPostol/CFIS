DEFINITION MODULE VORO_avrage;

  TYPE
    PartIdx        =
      [0 .. 35];
    AVRState       =
      ( Empty,
        MinFound,
        MaxFound,
        insideCCW,
        insideCW );
    AVRdescription =
      RECORD
        state   :
          AVRState;
        errDevSun  :
          REAL;
        samples :
          CARDINAL;
        index   :
          PartIdx;
      END;

  PROCEDURE ClearContainer
            ( VAR container : AVRdescription );

  PROCEDURE AddSample
            (     src       : INTEGER;
                  rfc       : INTEGER;
              VAR container : AVRdescription ) : BOOLEAN;

END VORO_avrage.
