    SKALA_X_90 = 3;
    SKALA_Y_90 = 1;

  VAR
    PrnX            : CARDINAL;
    PrnY            : CARDINAL;
    PolozenieNapisu : CARDINAL;

  VAR
    TextModeOutProc  : PROCEDURE( CHAR ) : BOOLEAN;

  PROCEDURE GorszeBoMniejsze
            ( VAR val : INTEGER;
                  cv  : INTEGER );

  PROCEDURE DalszeOdZera
            ( VAR val : INTEGER;
                  cv  : INTEGER );

  PROCEDURE MaxY() : CARDINAL;

  PROCEDURE log
            (    x : REAL ) : REAL;

  PROCEDURE Wr
            (    ch : CHAR ) : BOOLEAN;

  PROCEDURE WrPrn
            (    At  : CARDINAL;
                 str : ARRAY OF CHAR ) : BOOLEAN;

  PROCEDURE WrLn() : BOOLEAN;

  PROCEDURE WrPrnLn
            (    At  : CARDINAL;
                 str : ARRAY OF CHAR ) : BOOLEAN;

  PROCEDURE InitA
            ( VAR d      : Desc;
                  FN     : ARRAY OF CHAR;
                  opis   : ARRAY OF CHAR;
                  Offset : INTEGER;
                  zakres : INTEGER;
                  od,
                  do     : INTEGER;
                  log    : BOOLEAN      );

  PROCEDURE InitB
            ( VAR d       : Desc;
                  opis    : ARRAY OF CHAR;
                  Negacja : BOOLEAN;
                  Offset  : INTEGER;
                  zakres  : INTEGER;
                  Pole    : CARDINAL      );

  PROCEDURE Point
            ( VAR rec     : Desc;
                  cur_idx : INTEGER );

  PROCEDURE Opis
            ( VAR rec   : Desc;
                  Nizej : BOOLEAN );

  PROCEDURE CloseAll
