    GlownyOdbiornikT;

  IMPORT
    FIO, InpLine, CommonTypes;

  CONST
    Style0       = {0..3, 8..11};
    StyleSep     = {0, 2, 4, 6, 8, 10, 12, 14};
    StyleOdl     = {0, 1, 4, 5, 8, 9, 12, 13};
    ScreenMaxLen = 108;

  TYPE
    Desc =
      RECORD
        Opis     :
          ARRAY [0 .. 31] OF CHAR;
        SklStala :
          INTEGER;
        Zakres   :
          INTEGER;
        Uzywane  :
          BOOLEAN;
        CASE Binarne : BOOLEAN OF
          FALSE :
            File     : FIO.File;
            Mnoznik  : REAL;
            Przes    : REAL;
            st       : INTEGER;
            Logarytm : BOOLEAN;
          |
          TRUE :
            Bit      : CARDINAL;
            Negacja  : BOOLEAN;
        END;
      END;

  CONST
    PASEK    =
