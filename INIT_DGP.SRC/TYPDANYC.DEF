DEFINITION MODULE TypDanych;

  FROM CommonTypes IMPORT
     PolozenieGeo, PolozenieBiegunowe, Str40;

  TYPE
    MainStates     =
      (StartMS,
       KoniecMS);

    TypUrzadzenia =
      ( LOC,
        GS,
        VOR,
        ADF,
        VHF);
            PolozenieBiegunWysokosc =
      RECORD
        Kat, Odleglosc, Wysokosc : REAL;
      END;
  TYPE
    ParametryUrzadzenia =
      RECORD
        Nazwa                   : Str40;
        Polozenie               : PolozenieGeo;
        Teodolit                : PolozenieBiegunowe;
        Deklinacja              : REAL;
        Czestotliwosc           : CARDINAL;
        PolozenieDGPS		: PolozenieBiegunWysokosc;
        Identyfikator           : ARRAY [ 0 .. 3 ] OF CHAR;
      END;
   Urzadzenie = ARRAY TypUrzadzenia OF ParametryUrzadzenia;


   ParametryIdentyf = 
     RECORD
        NazwaPlikuOpisu,
        Urzadz,
        Lista,
        Ilosc,
        Nazwa ,                  
        DlugoscStopnie,
        DlugoscMinuty,
        DlugoscSetne,
        SzerokoscStopnie,
        SzerokoscMinuty,
        SzerokoscSetne,
        GPSKat,
        GPSOdleglosc,
        GPSWysokosc,
        Deklinacja,
        Czestotliwosc,
        Identyfikator           : Str40;
      END;


PROCEDURE ParametryPlikIni (typURZ  :TypUrzadzenia;
                            VAR ParamIdenty :  ParametryIdentyf ); 
END TypDanych.
